# NEXUS Environment Variables
# Copy this to . env and fill in your values

# === DATABASE ===
DB_HOST=localhost
DB_USERNAME=nexus
DB_PASSWORD=your-secure-password-here

# === AUTHENTICATION ===
NEXUS_ADMIN_PASSWORD=change-me-on-first-run

# === OIDC/SSO (Optional) ===
OIDC_ISSUER=https://your-company.okta.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret

# === LDAP (Optional) ===
LDAP_PASSWORD=your-ldap-password

# === AWS (Optional) ===
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BACKUP_BUCKET=nexus-backups
AUDIT_BUCKET=nexus-audit-logs
KMS_KEY_ID=

# === WEBHOOKS (Optional) ===
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_SECURITY_WEBHOOK=https://hooks.slack.com/services/YOUR/SECURITY/WEBHOOK
PAGERDUTY_WEBHOOK=https://events.pagerduty.com/integration/YOUR_KEY/enqueue
WEBHOOK_TOKEN=

# === AGENT (Kubernetes) ===
NEXUS_AGENT_API_KEY=generated-on-server-init
NEXUS_SERVER_URL=https://nexus. your-company.com:8443
K8S_NAMESPACE=production

# === MISC ===
POSTGRES_PASSWORD=